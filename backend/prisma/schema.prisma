// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  userName  String   @unique
  password  String
  tipo      TipoUsuario
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("usuarios")
}

model Autor {
  cedula       String   @id
  nombreCompleto String
  nacionalidad  String
  libros       Libro[]  // Relaci√≥n 1:N con Libro
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("autores")
}

model Libro {
  isbn           String   @id @unique
  editorial      String
  genero         String
  anoPublicacion Int
  autorCedula    String
  autor          Autor    @relation(fields: [autorCedula], references: [cedula], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("libros")
}

enum TipoUsuario {
  ADMINISTRADOR
  EMPLEADO
}